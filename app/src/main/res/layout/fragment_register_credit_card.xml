<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <ProgressBar
            android:id="@+id/spinner_loading_register_credit_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:indeterminate="true"
            tools:visibility="invisible" />

    </FrameLayout>

    <EditText
        android:id="@+id/et_credit_card_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Holder"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_credit_card_bin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_credit_card_holder"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="bin" />

    <EditText
        android:id="@+id/et_credit_card_last_digits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_credit_card_bin"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="ultimos digitos" />

    <Button
        android:id="@+id/bt_credit_card_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_credit_card_external_token"
        android:layout_marginTop="27dp"
        android:onClick="next"
        android:text="Cadastrar" />

    <EditText
        android:id="@+id/et_credit_card_expiration_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_credit_card_last_digits"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Data de validade"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_credit_card_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_credit_card_expiration_date"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Bandeira"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/et_credit_card_external_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_credit_card_brand"
        android:layout_marginTop="11dp"
        android:ems="10"
        android:hint="ExternalToken"
        android:inputType="textPersonName" />


</RelativeLayout>