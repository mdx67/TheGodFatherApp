<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="visible">

    <ProgressBar
        android:id="@+id/spinner_loading_subscription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bt_plan_one"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="32dp"
        tools:visibility="invisible" />

    <Button
        android:id="@+id/bt_plan_one"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_marginTop="73dp"
        android:text="Plano 29,90"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/bt_plan_two"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinner_loading_subscription"
        android:layout_marginTop="24dp"
        android:text="Plano 39,90"
        tools:ignore="HardcodedText" />



</RelativeLayout>