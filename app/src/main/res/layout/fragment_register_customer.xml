<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="1000dp">

            <EditText
                android:id="@+id/et_user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/et_name"
                android:layout_marginTop="21dp"
                android:ems="10"
                android:hint="UserId"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/et_address_number"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/et_address_street"
                android:layout_marginTop="18dp"
                android:ems="10"
                android:hint="Número"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/et_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="18dp"
                android:ems="10"
                android:hint="Nome"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/et_address_street"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/et_document_number"
                android:layout_marginTop="19dp"
                android:ems="10"
                android:hint="Endereço"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/et_document_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/et_user_id"
                android:layout_marginTop="19dp"
                android:ems="10"
                android:hint="Numero documento"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/bt_register_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:onClick="next"
                android:text="Cadastrar"
                android:layout_below="@+id/et_address_postal_code"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/et_address_postal_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/et_address_number"
                android:layout_marginTop="19dp"
                android:ems="10"
                android:hint="CEP"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/et_address_complement"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/et_address_postal_code"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@+id/et_address_number"
                android:layout_toRightOf="@+id/et_address_number"
                android:ems="10"
                android:hint="Complemento"
                android:inputType="textPersonName" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>